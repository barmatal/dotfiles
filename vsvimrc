set vsvim_useeditordefaults
let mapleader="\<Space>"
inoremap jj <Esc>

" Surround
vmap s" "ac"<Esc>"agpi"<Esc>
vmap s{ "ac{<Esc>"agpi}<Esc>
vmap s' "ac'<Esc>"agpi'<Esc>
vmap s[ "ac[<Esc>"agpi]<Esc>
vmap s( "ac(<Esc>"agpi)<Esc>
vmap s< "ac<<Esc>"agpi><Esc>

nmap s" /"<CR>x?"<CR>x
nmap s{ /}<CR>x?{<CR>x
nmap s' /'<CR>x?'<CR>x
nmap s[ /]<CR>x?[<CR>x
nmap s( /)<CR>x?(<CR>x
nmap s< /><CR>x?<<CR>x

" Search
set ignorecase
set smartcase     " ignore case if search pattern is all lowercase, case-sensitive otherwise
set hlsearch      " highlight search terms
set incsearch     " show search matches as you type

" Clear search
nmap <silent> <leader>/ :nohlsearch<CR>

" Easy copy paste to clipboard
noremap <Leader>p "*p
noremap <Leader>y "*y

" Navigate tabs
nmap <leader>j :vsc Window.PreviousTab<CR>
nmap <leader>k :vsc Window.NextTab<CR>
nmap <leader>x :vsc Window.CloseDocumentWindow<CR>

" Comment
xnoremap gc :vsc Edit.CommentSelection<cr>
nnoremap gcc V:vsc Edit.CommentSelection<cr>

" Easy window navigation
map <leader>w <C-w>

" Better g; logic
nnoremap g, g;

" Quick macro execute
nnoremap Q @q

" Remapping of unused
nnoremap ñ :
vnoremap ñ :
nnoremap Ñ /\v
vnoremap Ñ /\v
inoremap ñ {
inoremap Ñ [
inoremap ç }
inoremap Ç ]

nnoremap viñ vi{
nnoremap ciñ ci{
nnoremap yiñ yi{
nnoremap diñ di{

nnoremap viÑ vi[
nnoremap ciÑ ci[
nnoremap yiÑ yi[
nnoremap diÑ di[
